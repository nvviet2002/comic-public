                    <i class="fa-solid fa-house"></i>
                </a>
            </li>
            <li class="nav-item">
                <a href="" class="nav-item-link">HOT</a>
            </li>
            <li class="nav-item">
                <a href="" class="nav-item-link" onclick="alert('Bạn chưa đăng nhập');">THEO DÕI</a>
            </li>
            <li class="nav-item">
                <a href="" class="nav-item-link">LỊCH SỬ</a>
            </li>
            <li class="nav-item dropdown">
                <a href="" class="nav-item-link dropdown-toggle">
                    THỂ LOẠI
                </a>
                <div class="dropdown-menu nav-megamenu bg-white rounded-3 border-1">
                    <div class="row px-4 w-100 fs-15">
                        <a asp-area="Client" asp-controller="Story" asp-action="Search"
                           asp-route-status="" asp-route-sort=""
                           asp-route-slug="tat-ca" asp-route-id=""
                           class="col-3 fs-15 p-2 nav-category-item active" data-desc="Tất cả thể loại truyện tranh">
                            Tất cả
                        </a>
                        @foreach (var category in categories)
                        {
                            <a asp-area="Client" asp-controller="Story" asp-action="Search"
                               asp-route-status="" asp-route-sort=""
                               asp-route-slug="@category.Slug" asp-route-id="@category.Id"
