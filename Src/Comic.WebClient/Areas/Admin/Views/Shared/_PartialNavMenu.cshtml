<aside id="layout-menu" class="layout-menu menu-vertical menu bg-menu-theme">


    <div class="app-brand demo ">
        <a href="index.html" class="app-brand-link">
            <span class="app-brand-logo demo">
                <svg width="32" height="22" viewBox="0 0 32 22" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" clip-rule="evenodd" d="M0.00172773 0V6.85398C0.00172773 6.85398 -0.133178 9.01207 1.98092 10.8388L13.6912 21.9964L19.7809 21.9181L18.8042 9.88248L16.4951 7.17289L9.23799 0H0.00172773Z" fill="#7367F0" />
                    <path opacity="0.06" fill-rule="evenodd" clip-rule="evenodd" d="M7.69824 16.4364L12.5199 3.23696L16.5541 7.25596L7.69824 16.4364Z" fill="#161616" />
                    <path opacity="0.06" fill-rule="evenodd" clip-rule="evenodd" d="M8.07751 15.9175L13.9419 4.63989L16.5849 7.28475L8.07751 15.9175Z" fill="#161616" />
                    <path fill-rule="evenodd" clip-rule="evenodd" d="M7.77295 16.3566L23.6563 0H32V6.88383C32 6.88383 31.8262 9.17836 30.6591 10.4057L19.7824 22H13.6938L7.77295 16.3566Z" fill="#7367F0" />
                </svg>
            </span>
            <span class="app-brand-text demo menu-text fw-bold">Comic</span>
        </a>

        <a href="javascript:void(0);" class="layout-menu-toggle menu-link text-large ms-auto">
            <i class="ti menu-toggle-icon d-none d-xl-block ti-sm align-middle"></i>
            <i class="ti ti-x d-block d-xl-none ti-sm align-middle"></i>
        </a>
    </div>

    <div class="menu-inner-shadow"></div>

    @{
        string dashboardActive, userActive, authorizeOpen, roleActive, permissionActive, categoryActive, storyActive;
        dashboardActive = userActive = authorizeOpen = roleActive = permissionActive = categoryActive = storyActive = string.Empty;
        if(ViewBag.Page == "Dashboard")
        {
            dashboardActive = "active";
        }
        else if (ViewBag.Page == "User")
        {
            userActive = "active";
        }
        else if (ViewBag.Page == "Role")
        {
            roleActive = "active";
            authorizeOpen = "open";
        }
        else if (ViewBag.Page == "Permission")
        {
            permissionActive = "active";
            authorizeOpen = "open";
        }
        else if (ViewBag.Page == "Category")
        {
            categoryActive = "active";
        }
        else if (ViewBag.Page == "Story")
        {
            storyActive = "active";
        }
        else if (ViewBag.Page == "Seo")
        {
            storyActive = "active";
        }
    }
    <ul class="menu-inner py-1">
        <!-- Dashboard -->
        <li class="menu-item @dashboardActive">
            <a href="javascript:void(0);" class="menu-link" id="menuDashboard">
                <i class="menu-icon tf-icons ti ti-smart-home"></i>
                <div>Tổng quan</div>
            </a>
        </li>
        <!-- User -->
        <li class="menu-item @userActive">
            <a href="javascript:void(0);" class="menu-link" id="menuUser">
                <i class="menu-icon tf-icons ti ti-users"></i>
                <div>Người dùng</div>
            </a>
        </li>
        <!-- Roles and permission -->
        <li class="menu-item @authorizeOpen">
            <a href="javascript:void(0);" class="menu-link menu-toggle">
                <i class='menu-icon tf-icons ti ti-settings'></i>
                <div>Phân quyền</div>
            </a>
            <ul class="menu-sub">
                <li class="menu-item @roleActive">
                    <a href="javascript:void(0);" class="menu-link" id="menuRole">
                        <div>Vai trò</div>
                    </a>
                </li>
                <li class="menu-item @permissionActive">
                    <a href="javascript:void(0);" class="menu-link" id="menuPermission">
                        <div>Quyền</div>
                    </a>
                </li>
            </ul>
        </li>
        <!-- Category -->
        <li class="menu-item @categoryActive">
            <a href="javascript:void(0);" class="menu-link" id="menuCategory">
                <i class='menu-icon tf-icons ti ti-clipboard'></i>
                <div>Danh mục</div>
            </a>
        </li>
        <!-- Story -->
        <li class="menu-item @storyActive">
            <a href="javascript:void(0);" class="menu-link" id="menuStory">
                <i class='menu-icon tf-icons ti ti-book'></i>
                <div>Truyện</div>
            </a>
        </li>
        <!-- SEO -->
        <li class="menu-item @storyActive">
            <a href="javascript:void(0);" class="menu-link" id="menuSeo">
                <i class='menu-icon tf-icons ti ti-magnet'></i>
                <div>SEO</div>
            </a>
        </li>
    </ul>



</aside>
